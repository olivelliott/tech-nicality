<article>
    <a href="/dashboard" class="btn mb-5"> &larr; Back to dashboard</a>
    <h2 class="text-center title mt-5">
        Edit Your Post
    </h2>
    <form class="edit-post-form card p-5">
        <div>
            <label for="post-title">Post Title:</label>
            <input name="post-title" type="text" class="mb-3" value="{{post.title}}" />

            <label for="post-content">Post Content:</label>
            <input name="post-content" type="text" class="textarea" value="{{post.content}}" />
        </div>
        <div>
            Created by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="btn mb-2 mt-4 save-post-btn">Save post</button>
        <button type="button" class="delete-post-btn btn">Delete post</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit" class="btn">add comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>