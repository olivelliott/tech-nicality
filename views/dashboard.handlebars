<section class="card text-center p-5 rounded-lg">
  <h2>Create New Blog Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Blog Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-content">Blog Content</label>
      <textarea id="post-content" class="textarea"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2 class="mb-2 mt-5 text-center">Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li class="card mb-3">
      {{> post-info post}}
      <button class="btn"><a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a></button>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>